<!doctype html>
<html>
  <head>
    <title>Crowdsource</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../style.css">
  </head>
  <body>

    <div class='container'>
        <div class='row well'>
          <h1><%= poll.question %></h1>
        </div>
        <div class='row well'>
        <div class='col-xs-8'>
          <div class='responses'>
            <p class='btn btn-danger'><%= poll.responses.a %></p>
            <p class='btn btn-warning'><%= poll.responses.b %></p>
            <p class='btn btn-success'><%= poll.responses.c %></p>
            <p class='btn btn-primary'><%= poll.responses.d %></p>
          </div>
        </div>
        <div class='col-xs-4'>
          <% if (!poll.private || admin) { %>
            This is where results will go if it's not private
          <% } %>
        </div>
      </div>

      <% if (admin) { %>
        <div class='links'>
          <h3>Public Link</h3>
          <div id='public'><%= publicURL %></div>
          <br>
            <h3>Admin Link</h3>
            <div id='admin'><%= adminURL %></div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="/post-links.js"></script>
      <% } %>
    </div>


    <div id='my-vote'></div>
    <div id='submitted-votes'></div>


    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/client.js"></script>
  </body>
</html>
