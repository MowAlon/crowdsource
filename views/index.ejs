<!doctype html>
<html>
  <head>
    <title>Crowdsource</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="style.css">
    <link rel="stylesheet" href="./lib/bootstrap-datetimepicker.min.css">

  </head>
  <body class='container'>
    <h1>Ask that burning question</h1>

    <section class='create-poll'>
      <form action='/newpoll' method='post'>
        <div class='well'>
          <input required type='text' placeholder='What do you want to ask?' name='question' class='form-control question'>
        </div>
        <div class='well'>
          <input required type='text' placeholder='Put your responses here.' name='responses[a]' class='form-control' id='response-a'>
          <input required type='text' placeholder='These first two are required.*' name='responses[b]' class='form-control' id='response-b'>
          <input type='text' placeholder='Optional additional response' name='responses[c]' class='form-control' id='response-c'>
          <input type='text' placeholder='Optional additional response' name='responses[d]' class='form-control' id='response-d'>
          <div class='row'>
            <div class='col-xs-4'>
              <input type='submit' class='submit-poll btn btn-primary'>
              <input type="checkbox" name='private' id='private'> Keep results private
            </div>
            <div class='col-xs-8'>
              <div class='input-group date' id='datetimepicker1'>
                <input type='text' name='expiration' placeholder="Pick date & time to set expiration (or leave blank)" value="" class="form-control" />
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                </span>
              </div>
          </div>
          </div>
        </div>
      </form>
    </section>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    <script src="./set-datetimepicker.js"></script>
    <script src="./lib/moment.js"></script>
    <script src="./lib/bootstrap-datetimepicker.min.js"></script>

  </body>
</html>
